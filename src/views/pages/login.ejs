<%- include ('../partials/message') %>

    <div class="wrapper-page">
        <div class="card">
            <div class="card-body">

                <h3 class="text-center m-0">
                    <a href="/" class="logo logo-admin">
                        <img src="public/images/1.png" id="header-logo" alt="logo" style="height: 0%; width: 126px;" />

                    </a>
                </h3>

                <div class=" p-3">
                    <h4 class="font-18 m-b-5 text-center">Welcome Back !</h4>
                    <p class="text-muted text-center">Sign in to continue to The Taktikal Digital Marketing services</p>

                    <form id="validateLogin" class="form-horizontal m-t-30" method="POST" action="/login">
                        <div class="form-row">
                            <div class="form-group col-md-12 ">
                                <label for="username">UserName</label>
                                <input type="text" class="form-control" name="userName" id="userName"
                                    placeholder="Enter UserName" autocomplete="off" />
                            </div>

                            <div class="form-group col-md-12">
                                <label for="Password">Password</label>
                                <input type="password" class="form-control" name="password" id="password"
                                    placeholder="Enter Password" maxlength="20" autocomplete="off" />
                                <span toggle="#password"
                                    class="fa fa-fw fa-eye-slash field-icon toggle-password"></span>
                            </div>
                        </div>
                        <div class="form-group row m-t-20">
                            <div class="col-sm-6">
                            </div>
                            <div class="col-sm-6 text-right">
                                <button class="btn btn-primary w-md waves-effect waves-light" type="submit">
                                    Log In
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="m-t-40 text-center">
